<%= render 'shared/page_title', title: "Create a new Style" %>

<%= render 'shared/errors', obj: @style %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for(@style) do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name %>
      
      <%= form.submit('Create Style', class: "btn btn-success") %>
    <% end %>
  </div>
</div>